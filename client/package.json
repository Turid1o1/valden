{
  "name": "valden-client",
  "version": "0.1.0",
  "description": "VALDEN Electron Agent/Viewer client",
  "main": "main.js",
  "author": "VALDEN",
  "license": "UNLICENSED",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "package:mac": "electron-builder --mac dmg",
    "package:mac:unsigned": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac dmg zip",
    "package:mac:signed": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac dmg",
    "package:win": "electron-builder --win nsis --x64"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "space.valden.client",
    "productName": "VALDEN",
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "native/**/*",
      "renderer/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "assets/valden.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "VALDEN-Setup-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "perMachine": false,
      "include": "build/installer.nsh"
    },
    "protocols": [
      {
        "name": "VALDEN Activation",
        "schemes": [
          "valden"
        ]
      }
    ],
    "afterSign": "scripts/notarize.js"
  }
}
